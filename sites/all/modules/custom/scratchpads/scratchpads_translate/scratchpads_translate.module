/**
 * Implements hook_module_implements_alter().
 */
function scratchpads_translate_module_implements_alter(&$imps, $hook){
  if(in_array($hook, array(
    'form_taxonomy_form_vocabulary_alter',
    'form_menu_edit_menu_alter',
    'form_alter'
  )) && isset($imps['scratchpads_translate'])){
    $move = $imps['scratchpads_translate'];
    unset($imps['scratchpads_translate']);
    $imps['scratchpads_translate'] = $move;
  }
}

/**
 * Implements hook_field_attach_load()
 */
function scratchpads_translate_field_attach_load($entity_type, $queried_entities, $age, $options){
  foreach($queried_entities as $entity){
    list($id, $vid, $bundle) = entity_extract_ids($entity_type, $entity);
    $instances = _field_invoke_get_instances($entity_type, $bundle, array(
      'deleted' => FALSE
    ));
    foreach($instances as $instance){
      if(count($queried_entities[$id]->{$instance['field_name']})){
        $field = field_info_field_by_id($instance['field_id']);
        if($field['translatable']){
          if(isset($queried_entities[$id]->{$instance['field_name']}[LANGUAGE_NONE]) && count($queried_entities[$id]->{$instance['field_name']}[LANGUAGE_NONE])){
            $queried_entities[$id]->{$instance['field_name']} = _scratchpads_translate_merge_language_none_values($queried_entities[$id]->{$instance['field_name']});
          }
        }
      }
    }
  }
}

/**
 * Helper function to merge values from LANGUAGE_NONE into the currently
 * selected language. Note, we retain the LANGUAGE_NONE values so that they can
 * be merged into other languages.
 * 
 * Note, this function is only called on arrays that HAVE LANGUAGE_NONE values,
 * so there is no need to check that first.
 */
function _scratchpads_translate_merge_language_none_values($values){
  // First we loop through the language we are merging into, and create hashes
  // of each value which we can then compare against.
  $languages = language_list('enabled');
  foreach($languages[1] as $language){
    $hashes = array();
    foreach($values[$language->language] as $id => $value){
      $hash = md5(serialize($value));
      $hashes[$hash] = $hash;
    }
    // Now we loop through the undefined language, and add any values that are not
    // in the current language to the current language
    foreach($values[LANGUAGE_NONE] as $id => $value){
      $hash = md5(serialize($value));
      if(!isset($hashes[$hash])){
        $values[$language->language][] = $value;
      }
    }
  }
  unset($values[LANGUAGE_NONE]);
  return $values;
}